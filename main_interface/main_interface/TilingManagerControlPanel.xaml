<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="main_interface.TilingManagerControlPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:main_interface"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowDefinitions="0.2*,*">

        <Border x:Name="Headertop" Background="Transparent">


            <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Top"  Height="120" Padding="16" Margin="24,24,0,0">
                <StackPanel Spacing="4">

                    <TextBlock
                        Text="Enable Tiling"
                        FontSize="30"
                        FontWeight="SemiBold" />

                    <TextBlock
                        Text="Automatically arranges windows for you"
                        FontSize="14"
                        Opacity="0.7" />
                </StackPanel>


                <ToggleSwitch 
                        x:Name="TilingManagerToggle"
                        Grid.Column="1"
                      FontSize="16"
                     MinHeight="48"
                        Padding="4"
                        OnContent="On"
                        OffContent="Off"
                        VerticalAlignment="Center"
                        Toggled="TilingManagerToggle_Toggled"
                        PointerEntered="Border_PointerEntered"
                        PointerExited="Border_PointerExited">

                <ToggleSwitch.RenderTransform>
                    <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                </ToggleSwitch.RenderTransform>
                </ToggleSwitch>


            </StackPanel>

        </Border>

        <Grid Grid.Row="1" ColumnDefinitions="*,*" Padding="16" Margin="24,24,0,0">

            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock
                    Text="Snap your windows "
                    FontSize="20"
                    Opacity="0.7"
                    VerticalAlignment="Top" />

                    <!-- gif -->

                <Image Source="/Assets/gifs/TilingManager.gif" />

                <!-- -->



            </StackPanel>


            <StackPanel Grid.Column="1" Spacing="8">
                    <TextBlock
                    Grid.Column="1"
                    Text="Features"
                    FontSize="20"
                    Opacity="0.7"
                    VerticalAlignment="Top" />
                    
                    <!-- toggles -->

                

                <!-- NICE TOGGLE BAR BORDER WRAPPED -->
                <Border Background="Transparent" CornerRadius="8" Padding="16" Margin="0,8,24,8" PointerEntered="Border_PointerEntered"
PointerExited="Border_PointerExited">
                    <!-- GRID COL 1  WITH TWO DESC UNDER EACHOTHER -->
                    <Grid ColumnDefinitions="*,Auto">
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="toggl1" FontSize="14" FontWeight="SemiBold" Foreground="White" />
                            <TextBlock Text="toggle 1 desc" FontSize="12" Opacity="0.9" Foreground="White" />
                        </StackPanel>
                        
                    <!-- GRID COL 2 TOGGLE -->
                        <ToggleSwitch 
                            Grid.Column="1"
                            x:Name="TilingToggle"
                            OnContent="On"
                            OffContent="Off"
                            VerticalAlignment="Center"
                            Margin="16,0,0,0" />
                    </Grid>
                </Border>




            </StackPanel>

        </Grid>


    </Grid>
</Page>
