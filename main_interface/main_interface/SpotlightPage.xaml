<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="main_interface.SpotlightPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:main_interface"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">



    <!-- Root grid that fills the window and receives keyboard input -->
    <Grid x:Name="RootGrid"
          Background="Transparent"
          
          >

        <TextBlock x:Name="DebugText"
               Text="Press Ctrl to test"
               FontSize="20"
               Foreground="Red"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,20,0,0"/>
        
        <TextBlock Text="Hello, world spotlight page !"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="32" />
        <!-- Dark layer that dims the screen -->
        <Rectangle
            x:Name="DarkLayer"
            Fill="Black"
            Opacity="0.6"
            Visibility="Collapsed"/>

        <!-- Canvas allows absolute positioning of spotlight -->
        <Canvas IsHitTestVisible="False">

            <!-- Spotlight circle -->
            <Ellipse
                x:Name="Spotlight"
                Width="200"
                Height="200"
                 Visibility="Collapsed"> 
                  <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                </RadialGradientBrush>
                </Ellipse.Fill>
 </Ellipse>

        </Canvas>


    </Grid>



</Page>
