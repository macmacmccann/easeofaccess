<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="main_interface.SettingsControlPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:main_interface"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <TextBlock 
            Text="Settings"
            FontSize="32"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,20,0,40"/>

        <!-- Content Area -->
        <StackPanel 
            Grid.Row="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Spacing="20"
            Width="550">


            <!-- NICE TOGGLE BAR BORDER WRAPPED -->
            <Border x:ConnectionId='6' Background="Transparent" CornerRadius="8" Padding="16" Margin="0,8,24,8"                                       
                                            >
                <!-- GRID COL 1  WITH TWO DESC UNDER EACHOTHER -->
                <Grid ColumnDefinitions="*,Auto">

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="Keep Program running in background" FontSize="14" FontWeight="SemiBold" Foreground="White" />
                        <TextBlock Text="Running features will be terminated on exit" FontSize="12" Opacity="0.9" Foreground="White" />
                    </StackPanel>

                    <!-- GRID COL 2 TOGGLE -->
                    <ToggleSwitch x:ConnectionId='9' 
            Grid.Column="1"
             x:Name="BackgroundProcessActiveToggle"
           Header="Apply"
           OffContent="Disabled"
           OnContent="Enabled"
                                                     
            VerticalAlignment="Center"
            Margin="16,0,0,0" />
                </Grid>
            </Border>




            <!-- NICE TOGGLE BAR BORDER WRAPPED -->
            <Border x:ConnectionId='7' Background="Transparent" CornerRadius="8" Padding="16" Margin="0,8,24,8"                                       
                                            >
                <!-- GRID COL 1  WITH TWO DESC UNDER EACHOTHER -->
                <Grid ColumnDefinitions="*,Auto">

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="Sync your data across cpus" FontSize="14" FontWeight="SemiBold" Foreground="White" />
                        <TextBlock Text="Applied features will not mirror other cpus" FontSize="12" Opacity="0.9" Foreground="White" />
                    </StackPanel>

                    <!-- GRID COL 2 TOGGLE -->
                        <ToggleSwitch x:ConnectionId='8' 
                    Grid.Column="1"
                     x:Name="SyncActiveToggle"
                   Header="Apply"
                   OffContent="Disabled"
                   OnContent="Enabled"
                                                
                    VerticalAlignment="Center"
                    Margin="16,0,0,0" />
                </Grid>
            </Border>








        </StackPanel>


        <StackPanel 
            Grid.Row="2"
           Orientation="Horizontal"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Spacing="20"
            Width="700">    
            <!-- Buttons -->
            
        <Button x:ConnectionId='2' 
            Content="Log Out"
            Padding="15,10"
            FontSize="16"
            Height="50"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"
                                      />



            <Button x:ConnectionId='3' 
            Content="Sync Data"
            Padding="15,10"
            FontSize="16"
            Height="50"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"
                                      />


            <Button x:ConnectionId='4' 
              Content="Close Window and Kill Processes"
              Padding="15,10"
              FontSize="16"
              Height="50"
              HorizontalAlignment="Center"
              Margin="0,0,0,20"
                                        />


            <Button x:ConnectionId='5' 
            Content="Delete Account"
            Padding="15,10"
            FontSize="16"
            Height="50"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"
                                      />

       

           </StackPanel>


    </Grid>
</Page>

