<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="main_interface.MouselessControlPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:main_interface"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowDefinitions="0.2*,*">

        <Border x:ConnectionId='2' x:Name="Headertop">


            <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Top"  Height="120" Padding="16" Margin="24,24,0,0">
                <StackPanel Spacing="4">

                    <TextBlock
                        Text="Enable Mouseless Interaction"
                        FontSize="30"
                        FontWeight="SemiBold" />

                    <TextBlock
                        Text="Move through typing"
                        FontSize="14"
                        Opacity="0.7" />
                </StackPanel>
                <ToggleSwitch x:ConnectionId='9'     
                            Grid.Column="1"
                               x:Name="MouselessToggle"
                             OffContent="Disabled"
                             OnContent="Enabled"
                                                              
                             FontSize="16"
                            MinHeight="48"
                               Padding="4"
                              VerticalAlignment="Center"
                                                                 
                                                                
                    >


                    <ToggleSwitch.RenderTransform>
                                    <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                                    </ToggleSwitch.RenderTransform>
                                </ToggleSwitch> 

            </StackPanel>

        </Border>
        
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Padding="16" Margin="24,24,0,0">

            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock
                    Text="Move around without any issues "
                    FontSize="20"
                    Opacity="0.7"
                    VerticalAlignment="Top" />

                <!-- gif -->

                <Image Source="/Assets/gifs/Mouseless.gif" />

                <!-- -->



            </StackPanel>


            <StackPanel Grid.Column="1" Spacing="8">
                <TextBlock
                    Grid.Column="1"
                    Text="Features"
                    FontSize="20"
                    Opacity="0.7"
                    VerticalAlignment="Top" />

                <!-- toggles -->



                <!-- NICE TOGGLE BAR BORDER WRAPPED -->
                <Border x:ConnectionId='3' Background="Transparent" CornerRadius="8" Padding="16" Margin="0,8,24,8"                                       
                                                            >
                    <!-- GRID COL 1  WITH TWO DESC UNDER EACHOTHER -->
                    <Grid ColumnDefinitions="*,Auto">

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="Fast Mouse Speed" FontSize="14" FontWeight="SemiBold" Foreground="White" />
                            <TextBlock Text="Higher speed lower control" FontSize="12" Opacity="0.9" Foreground="White" />
                        </StackPanel>

                        <!-- GRID COL 2 TOGGLE -->
                        <ToggleSwitch x:ConnectionId='8' 
                            Grid.Column="1"
                             x:Name="SpeedFastToggle"
                           Header="Fast Speed"
                           OffContent="Disabled"
                           OnContent="Enabled"
                                                             
                            VerticalAlignment="Center"
                            Margin="16,0,0,0" />
                    </Grid>
                </Border>



                <!-- NICE TOGGLE BAR BORDER WRAPPED -->
                <Border x:ConnectionId='4' Background="Transparent" CornerRadius="8" Padding="16" Margin="0,8,24,8"                                       
                                                   >
                    <!-- GRID COL 1  WITH TWO DESC UNDER EACHOTHER -->
                    <Grid ColumnDefinitions="*,Auto">

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="Medium Mouse Speed" FontSize="14" FontWeight="SemiBold" Foreground="White" />
                            <TextBlock Text="Controlled speed balanced ergonomics" FontSize="12" Opacity="0.9" Foreground="White" />
                        </StackPanel>

                        <!-- GRID COL 2 TOGGLE -->
                        <ToggleSwitch x:ConnectionId='7' 
                   Grid.Column="1"
                    x:Name="SpeedMedToggle"
                  Header="Medium Speed"
                  OffContent="Disabled"
                  OnContent="Enabled"
                                                   
                   VerticalAlignment="Center"
                   Margin="16,0,0,0" />
                    </Grid>
                </Border>



                <!-- NICE TOGGLE BAR BORDER WRAPPED -->
                <Border x:ConnectionId='5' Background="Transparent" CornerRadius="8" Padding="16" Margin="0,8,24,8"                                       
                                                   >
                    <!-- GRID COL 1  WITH TWO DESC UNDER EACHOTHER -->
                    <Grid ColumnDefinitions="*,Auto">

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="Slow Mouse Speed" FontSize="14" FontWeight="SemiBold" Foreground="White" />
                            <TextBlock Text="Slower speed high control" FontSize="12" Opacity="0.9" Foreground="White" />
                        </StackPanel>

                        <!-- GRID COL 2 TOGGLE -->
                        <ToggleSwitch x:ConnectionId='6' 
                   Grid.Column="1"
                    x:Name="SpeedSlowToggle"
                  Header="Slow Speed"
                  OffContent="Disabled"
                  OnContent="Enabled"
                                                    
                   VerticalAlignment="Center"
                   Margin="16,0,0,0" />
                    </Grid>
                </Border>




            </StackPanel>

        </Grid>


    </Grid>





</Page>

